{
    "swagger": "2.0",
    "info":
    {
        "version": "1.0.0",
        "title": "Covid Repo Applicatoin",
        "description": "Covid Repo Project Application API",
        "license":
        {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:4000",
    "basePath": "/",
    "tags": [
    {
        "name": "User",
        "description": "API to register user in the system"
    }],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths":
    {
        "/register":
        {
            "post":
            {
                "tags": ["User"],
                "summary": "Register a users in system",
                "parameters": [
                {
                    "name": "data",
                    "in": "body",
                    "description": "Data of the users",
                    "required": true,
                    "schema":
                    {
                        "$ref": "#/definitions/User"
                    }
                }],
                "responses":
                {
                    "200":
                    {
                        "description": "OK",
                        "schema":
                        {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            }
        },
        "/login":
        {
            "post":
            {
                "tags": ["Patient"],
                "summary": "Check patient is authorised to login",
                "parameters": [
                {
                    "name": "data",
                    "in": "body",
                    "description": "User ID fo the patient",
                    "required": true,
                    "schema":
                    {
                        "$ref": "#/definitions/Patient"
                    }
                }],
                "responses":
                {
                    "200":
                    {
                        "description": "OK",
                        "schema":
                        {
                            "$ref": "#/definitions/LoginResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions":
    {
        "User":
        {
            "required": ["username", "password", "is_superuser", "first_name",
                "last_name", "email", "is_staff", "is_active", "date_joined", "user_id", "secQues1",
                "secAns1", "secQues2", "secAns2", "secQues3", "secAns3"
            ],
            "properties":
            {
                "user_id":
                {
                    "type": "integer",
                    "example": "102",
                    "uniqueItems": true
                },
                "username":
                {
                    "type": "string",
                    "example": "testUser"
                },
                "password":
                {
                    "type": "string",
                    "example": "testUserPwd"
                },
                "is_superuser":
                {
                    "type": "boolean",
                    "example": 0
                },
                "first_name":
                {
                    "type": "string",
                    "example": "First"
                },
                "last_name":
                {
                    "type": "string",
                    "example": "Last"
                },
                "email":
                {
                    "type": "string",
                    "example": "testUser@gmail.com"
                },
                "is_staff":
                {
                    "type": "boolean",
                    "example": 0
                },
                "is_active":
                {
                    "type": "boolean",
                    "example": 0
                },
                "date_joined":
                {
                    "type": "date",
                    "pattern": "/([0-9]{4})-(?:[0-9]{2})-([0-9]{2})/",
                    "example": "2019-05-17"
                },
                "secQues1":
                {
                    "type": "string",
                    "example": "Favourite Food"
                },
                "secAns1":
                {
                    "type": "string",
                    "example": "Rice"
                },
                "secQues2":
                {
                    "type": "string",
                    "example": "Favourite Cricketer"
                },
                "secAns2":
                {
                    "type": "string",
                    "example": "Sachin Tendulkar"
                },
                "secQues3":
                {
                    "type": "string",
                    "example": "Favourite Sport"
                },
                "secAns3":
                {
                    "type": "string",
                    "example": "Hockey"
                }
            }
        },
        "Patient":
        {
            "required": ["user_id", "password"],
            "properties":
            {
                "user_id":
                {
                    "type": "integer",
                    "example": "102",
                    "uniqueItems": true
                },
                "password":
                {
                    "type": "string",
                    "example": "testUserPwd"
                }
            }
        },
        "LoginResponse":
        {
            "properties":
            {
                "message":
                {
                    "type": "string",
                    "example": "Patient is authenticated"
                },
                "isUserAuthenticated":
                {
                    "type": "boolean",
                    "example": 1
                },
                "id":
                {
                    "type": "integer",
                    "example": 102
                }
            }

        }
    }
}